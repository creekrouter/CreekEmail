    <style name="Toolbar.elec" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Popup.elec" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/elec_album_popup_bg</item>
    </style>

