<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" >

    <!--email 自定义dialog-->
    <style name="mail_dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>
    <!--邮件-->
    <style name="email_attach">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="mail_detail_more_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="mail_detail_more_style2">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mail_detail_more_style3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="tv_bg_mail_search_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_text_color_blue_white</item>
    </style>

    <declare-styleable name="tag_flow_layout" tools:ignore="ResourceName">
        <attr name="max_select" format="integer"></attr>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="search_box_view" tools:ignore="ResourceName">
        <attr name="voiceEnable" format="boolean" />
        <attr name="enableInput" format="boolean"/>
        <attr name="inputHint" format="string"/>
        <attr name="inputHintColor" format="color"/>
        <attr name="documentSize" format="dimension"/>
    </declare-styleable>

</resources>