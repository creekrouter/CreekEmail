<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64sp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64sp"
        android:paddingLeft="20dp">

        <!-- 人员名称 -->
        <TextView
            android:id="@+id/item_mail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="张三"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_mail_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_mail_name"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="40dp"
            android:text="sdsdsdsdsdsdsdsdsdsdsdsd"
            android:textColor="#888888"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/contacts_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/mail_contact_list_enter_detail"
            android:scaleType="centerInside" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:background="#f2f2f2" />
    </RelativeLayout>
</LinearLayout>
