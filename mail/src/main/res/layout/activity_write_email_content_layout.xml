<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.creek.mail.compose.view.WriteMailTitleBar
        android:id="@+id/compose_action_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <com.creek.mail.compose.view.WriteMailHeader
                android:id="@+id/compose_mail_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="#f2f2f2" />

            <com.creek.mail.compose.view.ComposeView
                android:id="@+id/compose_email_rich_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:textColor="@color/text_tv_normal"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
