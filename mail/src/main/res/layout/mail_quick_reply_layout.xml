<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <com.creek.common.view.CircleIconView
            android:id="@+id/email_replay_header_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3.5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/send_mail_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#888888"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/cc_send_mail_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#888888"
                android:textSize="14dp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/mail_iv_replay_tag_ect"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/new_email_quickly_replay_icon" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#F2F2F2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:scrollbars="none"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp">

        <EditText
            android:id="@+id/et_replay_popuwindow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="回复全部..."
            android:text="\n\n\n\"
            android:textSize="16dp" />
    </ScrollView>


    <TextView
        android:id="@+id/tv_send_replay_popuwindows"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/mail_quick_reply_send_bg"
        android:gravity="center"
        android:text="发送"
        android:textColor="@color/white" />


</LinearLayout>
