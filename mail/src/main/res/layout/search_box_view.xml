<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_search_box_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/search_box_bg_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2dp">


        <ImageView
            android:id="@+id/iv_search_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/icon_search_normal" />

        <com.creek.mail.search.SearchEditText
            android:id="@+id/et_search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/widget_color000000"
            android:textColorHint="@color/widget_color999999"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_search_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_delete" />

        <ImageView
            android:id="@+id/iv_search_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search_voice"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>