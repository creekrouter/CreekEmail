<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:clickable="true"
            android:background="#FEFEFE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rr_email_title"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="bottom"
                        android:textStyle="bold"
                        android:text="邮件"
                        android:textColor="#1F2329"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/drawer_line" />
                </RelativeLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--当前用户-->
                        <RelativeLayout
                            android:id="@+id/rl_drawer_account_item"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView
                                android:id="@+id/iv_drawer_account"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="16dp"
                                android:src="@drawable/sidemenu_mail_icon" />

                            <LinearLayout
                                android:id="@+id/ll_drawer_account"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/iv_drawer_account"
                                android:layout_marginLeft="16dp"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_marginBottom="1dp">

                                    <TextView
                                        android:id="@+id/tv_drawer_email_account"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:text=""
                                        android:lines="1"
                                        android:ellipsize="end"
                                        android:textColor="@color/color_black_31353B"
                                        android:textSize="16dp" />
                                </RelativeLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignLeft="@+id/ll_drawer_account"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="16dp"
                                android:background="@color/drawer_line" />
                        </RelativeLayout>
                        <!--侧滑菜单页面-->

                        <ListView
                            android:id="@+id/lv_mail_menu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cacheColorHint="#00000000"
                            android:divider="@null"
                            android:dividerHeight="2dip"
                            android:listSelector="#00000000"
                            android:scrollbars="none" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="16dp"
                                android:text="功能"
                                android:textColor="#888888"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mail_contact"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="16dp"
                                android:src="@drawable/icon_contact_address" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_gravity="center_vertical"
                                android:text="通讯录"
                                android:textColor="@color/color_black_31353B"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="62dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/drawer_line" />

                        <LinearLayout
                            android:id="@+id/schedule_mail"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="16dp"
                                android:src="@drawable/icon_schedule_mail" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_gravity="center_vertical"
                                android:text="待办邮件"
                                android:textColor="@color/color_black_31353B"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="62dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/drawer_line" />

                        <LinearLayout
                            android:id="@+id/ll_signature_area"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="16dp"
                                android:src="@drawable/mail_signature_settting" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_gravity="center_vertical"
                                android:text="落款签名"
                                android:textColor="@color/color_black_31353B"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="62dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/drawer_line" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="16dp"
                                android:text="设置"
                                android:textColor="#888888"
                                android:textSize="14sp" />

                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/ll_clear_mail_area"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="16dp"
                                android:src="@drawable/mail_clear" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:text="清除数据"
                                android:textColor="@color/color_black_31353B"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="62dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/drawer_line" />


                        <LinearLayout
                            android:id="@+id/account_logout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="16dp"
                                android:background="@drawable/icon_account_logout"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:text="退出登录"
                                android:textColor="@color/color_black_31353B"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="39dp"
                            android:layout_marginLeft="62dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/drawer_line" />
                    </LinearLayout>
                </ScrollView>


            </LinearLayout>
        </LinearLayout>


    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>
